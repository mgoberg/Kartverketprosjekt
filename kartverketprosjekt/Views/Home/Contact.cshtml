@model kartverketprosjekt.Models.ContactModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Kontakt";
}
<a asp-controller="Home" asp-action="Index">
    <i class='bx bx-chevron-left'></i>
</a>
<h2>GruppeCV</h2>

<style>
    h2 {
        text-align: center;
    }

    .member-card {
        border: 1px solid #ddd;
        padding: 15px;
        margin: 10px 0;
        border-radius: 5px;
        background-color: #f9f9f9;
        text-align: center;
    }

        .member-card h3 {
            margin-top: 10px;
        }

        .member-card img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 10px;
        }

    .contact-info {
        font-style: italic;
    }
</style>

