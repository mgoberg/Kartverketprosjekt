﻿@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row g-3">
        <!-- Bruker bootstrap gutter class for å skille boksene -->
        <!-- Venstre boks som holder tekst og knapp -->
        <div class="col-md-6 col-12">
            <div class="box">
                <div class="content">
                    <h2>Tekstboks</h2>
                    <p>Innhold i boksen</p>
                    <a asp-action="CorrectMap" class="btn btn-primary">Til Kartet</a>
                </div>
            </div>
        </div>

        <!-- Boks som holder et vekslende bilde -->
        <div class="col-md-6 col-12">
            <div class="box">
                <div class="content">
                    <h2>Bilde</h2>
                    <p>Placeholder fra bilde</p>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .box {
        height: 600px; /* høyde : 100vh for full viewport */
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f8f9fa;
        border-radius: 10px; /* Runda hjørnene */
        margin-top: 100px;
    }

    .content {
        text-align: center;
    }
</style>
